{
  "name": "website",
  "author": "Denis Beliaev",
  "license": "UNLICENSED",
  "description": "Website",
  "devDependencies": {
    "autoprefixer": "^9.7.4",
    "browser-sync": "^2.26.7",
    "concurrently": "^5.1.0",
    "cssnano": "^4.1.10",
    "eslint": "^6.8.0",
    "eslint-plugin-html": "^6.0.0",
    "gulp": "^4.0",
    "gulp-imagemin": "^7.1.0",
    "gulp-php2html": "^1.0",
    "gulp-postcss": "^8.0.0",
    "gulp-sass": "^4.0.2",
    "imagemin-jpegoptim": "^5.0",
    "rimraf": "latest",
    "webpack": "^5.0",
    "webpack-cli": "^4.0"
  },
  "scripts": {
    "install": "composer install",
    "build": "webpack --mode=production --no-devtool",
    "build-in-pipeline": "yarn && yarn build && gulp publish && php build.php",
    "serve": "concurrently \"php -S localhost:8080 router.php\" \"browser-sync 'http://localhost:8080' ./ -w --port 8000\" \"gulp watch\" \"webpack --watch\""
  },
  "browserslist": [
    "> 1% in RU",
    "iOS >= 12",
    "Safari >= 12",
    "last 2 Edge versions"
  ],
  "dependencies": {
    "@webcomponents/webcomponentsjs": "^2.0",
    "smoothscroll-polyfill": "^0.4.3"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended"
    ],
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "plugins": [
      "html"
    ],
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    }
  }
}
